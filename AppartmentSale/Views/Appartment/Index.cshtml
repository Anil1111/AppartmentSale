@model PagedList.IPagedList<AppartmentSale.ViewModels.AppartmentViewModel>
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Список квартир";
}

<h2>Список квартир</h2>

@Html.ActionLink("Добавить квартиру", "CreateAppartment", "Appartment", null, new { @class = "btn btn-danger" })

<div class="container" style="margin-top:1rem;">
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <tr>
                    <th>Название</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                    </tr>
                }

            </table>
            <br />
            Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
</div>